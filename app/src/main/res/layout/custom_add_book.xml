<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0"
android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aap="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="5dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="8dp"
        aap:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/linearLayoutstudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="8dp"
                aap:cardCornerRadius="8dp">

                <android.widget.ImageView
                    android:id="@+id/img_book"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center|left"
                    android:elevation="5dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt_title_book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:singleLine="false"
                        android:text="ramayana"
                        android:textColor="#01579b"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="By"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/txt_author_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/itcavantagradestdbk"

                        android:paddingLeft="3dp"
                        android:text="No "
                        android:textColor="#778899"

                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160sp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                       android:text="Total Book:"
                        android:fontFamily="@font/itcavantagradestdbk"

                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/txt_total_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/itcavantagradestdbk"

                        android:paddingLeft="3dp"
                        android:text="No "
                        android:textColor="#778899"

                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="226dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="Available Book:"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/txt_pieces_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/itcavantagradestdbk"

                        android:paddingLeft="3dp"
                        android:text="No "
                        android:textColor="#778899"

                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/btn_issue"
                        android:layout_width="100dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shap"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Issue"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/btn_delete"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shap"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Delete"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:visibility="visible" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/out_of_stock"
                        android:layout_width="50dp"
                        android:layout_height="53sp"
                        android:layout_marginLeft="190sp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:backgroundTint="#D82111"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:background="@drawable/ne"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>