<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SyncronizeActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtSyn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttanshapbalck"
            android:gravity="center"
            android:fontFamily="@font/itcavantagradestdbk"

            android:text="Synchronize"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttanshape"
            android:gravity="center"
            android:fontFamily="@font/itcavantagradestdbk"

            android:textColor="@color/white"
            android:text="Pending"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/btnFarmerRegistration"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Add Book"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/subscriber"
                                            android:layout_width="match_parent"
                                            android:layout_height="36dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_weight="1"
                                            android:background="@android:color/darker_gray"
                                            android:fontFamily="@font/itcavantagradestdbk"
                                            android:gravity="center"
                                            android:text="Subscriber"
                                            android:textColor="#000"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_issue"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Book Issue"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_return"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Return"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Delete Book"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_delete_subs"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Delete Subscriber"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/activity_reporting"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="@font/itcavantagradestdbk"
                        android:gravity="center"
                        android:text="Add Activity Reporting"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/llRegistration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_syn_addbook"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#66cff5"
                            android:drawableRight="@drawable/ic_baseline_sync_24"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:gravity="center"
                            android:text="0 pending Data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLandHolding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                                                <TextView
                                                    android:id="@+id/tv_syn_subscriber"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="36dp"
                                                    android:layout_marginHorizontal="20dp"
                                                    android:layout_marginTop="7dp"
                                                    android:layout_weight="1"
                                                    android:background="#66cff5"
                                                    android:drawableRight="@drawable/ic_baseline_sync_24"
                                                    android:fontFamily="@font/itcavantagradestdbk"
                                                    android:gravity="center"
                                                    android:text="0 pending Data"
                                                    android:textColor="@color/white"
                                                    android:textSize="15sp"
                                                    android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_issue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_syn_issue"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#66cff5"
                            android:drawableRight="@drawable/ic_baseline_sync_24"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:gravity="center"
                            android:text="0 pending Data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/syn_return"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#66cff5"
                            android:drawableRight="@drawable/ic_baseline_sync_24"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:gravity="center"
                            android:text="0 pending Data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_return12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/syn_delete"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#66cff5"
                            android:drawableRight="@drawable/ic_baseline_sync_24"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:gravity="center"
                            android:text="0 pending Data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_return123"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/syn_delete_subscriber"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#66cff5"
                            android:drawableRight="@drawable/ic_baseline_sync_24"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:gravity="center"
                            android:text="0 pending Data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_return12356"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/syn_activity_reporting"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#66cff5"
                            android:drawableRight="@drawable/ic_baseline_sync_24"
                            android:fontFamily="@font/itcavantagradestdbk"
                            android:gravity="center"
                            android:text="0 pending Data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>